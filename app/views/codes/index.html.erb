          <option value="sports">Sports & Outdoors</option>
          <option value="tools">Tools & Home Improvement</option>
          <option value="toy">Toys & Games</option>
        </select>
      </div>

      <nav class="filter_nav">
        <div class="button-group" data-filter-group="categories">
          <button class=" is-checked" data-filter="*">all categories</button>
          <button data-filter=".automotive">Automotive</button>
          <button data-filter=".baby">Baby</button>
          <button data-filter=".beauty">Beauty</button>
          <button data-filter=".books">Books</button>
          <button data-filter=".business">Business, Industrial & Scientific</button>
          <button data-filter=".cellphones">Cell Phones & Accessories</button>
