          <button data-filter=".kitchen">Kitchen & Housewares</button>
          <button data-filter=".miscellaneous">Miscellaneous</button>
          <button data-filter=".office">Office</button>
          <button data-filter=".garden">Patio, Lawn & Garden</button>
          <button data-filter=".sports">Sports & Outdoors</button>
          <button data-filter=".tools">Tools & Home Improvement</button>
          <button data-filter=".toy">Toys & Games</button>
        </div>
      </nav>   

    </div>
  
    <div class="card_container">

      <% @codes.each do |code| %>
      <div class="business_card <%= code.discount_spare_01 %> <%= code.discount_category %> ">
        <div class="card_image">
          <%= link_to (image_tag code.discount_image), code %>
        </div>
        <div class="masonry_sale">
          <div class="masonry_sale_wrapper">
            <div class="masonry_sale_howmuch"><%= code.discount_sale %></div>
            <div class="masonry_sale_text">SALE</div>
          </div>
        </div>
        <div class="business_info">
          <h4 class="discount_title_index"><%= code.discount_title %></h4>
          <p class="discount_get_code"><%= link_to "Get A Code", code %></p>
          <p><%= code.discount_offer %></p>
        </div>
      </div>
      <% end %>
  
      <div class="business_card baby amazon">
        <div class="card_image">
          <img src="http://www.gadgetsandtech.net/wp-content/uploads/2015/07/gadgets-in-hand-1000x500.jpg" />
        </div>
        <div class="masonry_sale">
          <div class="masonry_sale_wrapper">
            <div class="masonry_sale_howmuch">10%</div>
            <div class="masonry_sale_text">SALE</div>
          </div>
        </div>
        <div class="business_info">
          <h4 class="discount_title_index">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Reiciendis sit veniam incidunt, ad amet quis.</h4>
          <a href="#"><p class="discount_get_code">Get A Code</p></a>
          <p>At Blatt Beer & Table we strive to bring people together. We want to be a hub for those who </p>
        </div>
      </div>
