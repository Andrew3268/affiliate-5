<%= simple_form_for @code do |f| %>
 <h3>Select Department</h3>
  <%= f.select :discount_spare_01, options_for_select([["Department", ""], "Automotive", "Baby", "Beauty", "Books", "Business", "Cellphones & Accessories", "Clothing & Accessories", "Electronics", "Fashion", "Furniture", "Grocery", "computer", "Health & Personal Care", "Home", "Kitchen & Housewares", "Miscellaneous", "Fffice", "Pets", "Patio, Lawn & Garden", "Sports & Outdoors", "Tools & Home Improvement", "Toy & Games"])%>
  <%= f.input :discount_title %>
  <%= f.input :discount_code %>
  <%= f.input :discount_sale %>
  <%= f.input :discount_spare_02, label: 'After Price' %>
  <%= f.input :discount_date %>
  <%= f.input :discount_image %>
  <%= f.input :discount_link_01 %>
  <%= f.input :discount_link_02 %>
  </br>
  <%= f.button :submit %>
<% end %>