<div id="wrapper">
  <div id="main">
    <div class="inner_hotdeals">
    <%= render 'shared/header' %>
    <button onclick="topFunction()" id="myBtn" title="Go to top">Top</button>
      
      <ul class="shop_price_wrapper">
       <li><h1>Edit Discount Code</h1></li>
       <li><%= link_to "Back", codes_path %></li>
      </ul></br>
      <%= simple_form_for @code, :html => { :multipart => true } do |f| %>
       <h3>Select Market</h3>
       <%= f.select :discount_category, ([["Market", ""], "amazon", "ebay"])%>
       <h3>Select Department</h3>
       <%= f.select :discount_spare_01, ([["Department", ""], "automotive", "baby", "beauty", "books", "business", "cellphones", "clothing", "electronics", "fashion", "furniture", "grocery", "computer", "health", "home", "kitchen", "miscellaneous", "office", "pets", "garden", "sports", "tools", "toy"])%>
       <h3>Please check if it is a product of Amazon or not </h3>
       <%= f.select :discount_amazon, ([["Does it belongs to Amazon?(NO)", ""], "Yes"])%>
       <%= f.input :discount_title %>
       <%= f.input :discount_code %>
       <%= f.input :discount_date %>
       <%= f.input :discount_sale %>
       <%= f.input :discount_image %>
       <%= f.input :discount_source %>
       <%= f.input :discount_link_01 %>
       <%= f.input :discount_link_02 %>
       <%= f.input :discount_offer %>
       <%= f.input :discount_amazon_card %>
       <%= f.input :discount_used %>
       <%= f.input :discount_used_link %>
       <%= f.input :discount_coupon %>
       </br>
       <%= f.button :submit %>
      <% end %>

   </div>
  </div>
</div>