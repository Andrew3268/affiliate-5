<div id="wrapper">
  <div id="main">
    <div class="inner_hotdeals">
    <%= render 'shared/header' %>
      <button onclick="topFunction()" id="myBtn" title="Go to top">Top</button>
      
      <div class="expanded row" data-equalizer data-equalize-on="medium" id="test-eq">
        <div class="large-18" data-equalizer-watch>
          <div class="grids">

            
            <% @accessories.each do |acc| %>
              <div class="grid-item <%= acc.acc_option_01 %> <%= acc.acc_option_02 %> <%= acc.acc_option_03 %> <%= acc.acc_option_04 %> <%= acc.acc_option_05 %>">
                 <%= link_to (image_tag acc.acc_main_img), acc, {:class =>"main_img"} %>
                <div class="shop_sale">
                  <div class="shop_sale_wrapper">
                    <div class="shop_sale_howmuch"><%= acc.acc_sale %>% </div>
                    <div class="shop_sale_text">SALE</div>
                  </div>
                </div>
                <p class="shop_product_title"><%= link_to acc.acc_title, acc %></p>
                <div class="via_where">
                 <p class="shop_brand">via <%= acc.acc_option_03 %></p>
                </div>
                <ul class="shop_price_wrapper">
                  <li><p class="shop_original_price">$<%= acc.acc_offer_price %></p></li>
                  <li><p class="shop_sale_price">$<%= acc.acc_before_price %></p></li>
                </ul>
                <a target="_blank" href="<%= acc.acc_link %>"><p class="shop_check">Check it Out</p></a>
              </div>
            <% end %>
            <!--end grid-item-->
                            
          </div><!-- end grid-->
        </div><!--end col-->
      </div><!--end row-->
        
    </div><!--/.inner_hotdeals-->
  </div><!--/#main-->
  <%= render 'shared/sidebar_accessories' %>  
</div><!--/#wrapper-->