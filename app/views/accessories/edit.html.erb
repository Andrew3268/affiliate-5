<div id="wrapper">
  <div id="main">
    <div class="inner_hotdeals">
    <%= render 'shared/header' %>
    <button onclick="topFunction()" id="myBtn" title="Go to top">Top</button>
      
      <ul class="shop_price_wrapper">
       <li><h1>Edit Gadget on eBay Information</h1></li>
       <li><%= link_to "Back", discounts_path %></li>
      </ul><br>

      <%= simple_form_for @accessory do |f| %> 
        <%= f.select :discount_spare_03, ([["Department", ""], "automotive", "baby", "beauty", "books", "business", "cellphones", "clothing", "computer", "electronics", "fashion", "furniture", "grocery", "health", "home", "kitchen", "miscellaneous", "office", "pets", "patio", "outdoors", "tools", "toy"])%>

        <div class="form_border">
          <h2>Details(Title/Link/Description)</h2>
           <%= f.input :acc_title %>
           <%= f.input :acc_link %>
         </div><br>
        <div class="form_border">
         <h2>Price Information</h2>
          <%= f.input :acc_offer_price %>
          <%= f.input :acc_before_price %>
          <%= f.input :acc_sale %>
         </div><br>
        <div class="form_border">
          <h2>Images</h2>
          <%= f.input :acc_main_img %>
          <%= f.input :acc_spare_01, label: 'Percentage of Feedback'  %>
          <%= f.input :acc_spare_02, label: 'Feedback Link' %>
        </div><br>
         <%= f.button :submit%>
         <%= link_to "Back", discounts_path(@accessory) %>
      <% end %>

   </div>
  </div>
</div>