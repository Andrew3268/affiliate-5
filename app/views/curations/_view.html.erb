<div class="expanded row" data-equalizer data-equalize-on="medium" id="test-eq">
  <div class="large-18" data-equalizer-watch>
    <div class="grids">

      <div class="ourpick_warp dis_container">
        <div class="dis_grid">
          <% @curations.each do |curation| %>
          <div class="ourpick dis_card grid-item <%= curation.cr_option_01 %> <%= curation.cr_option_02 %>">
           
            <div class="dis_card--image">
              <%= link_to (image_tag curation.cr_img), curation %>
            </div>
            <div class="dis_card--content">
              <p class="code_title"><%= link_to curation.cr_title, curation %></p>
              <p class="code_price"><span>$<%= curation.cr_aprice %></span></p>
                      
              <div class="code_btn">
               <a target="_blank" href="<%= curation.cr_url %>">Check it Out</a> 
              </div>

              <% if can? :create, curation %>
              <ul>
               <li><%= link_to "Edit", edit_curation_path(curation) %></li>
               <li> <%= link_to "Delete", curation_path(curation), method: :delete, data: { confirm: "Are you sure?" } %></li>
              </ul>
              <% end %>

            </div><!--/.dis_card--content-->        
          </div><!--/.dis_card-->
          <% end %>
         </div><!--/.dis_grid--><br/>
       </div><!--/.dis_container-->
                     
    </div><!-- end grid-->
  </div><!--end col-->
 </div><!--end row-->



