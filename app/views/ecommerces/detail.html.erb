<!-- Wrapper -->
<div id="wrapper">

	<!-- Main -->
		<div id="main">
			<div class="inner">

				<!-- Header -->
					<%= render 'shared/header' %>
				  <% if flash[:message] %>	
					   <div class="flash_message">
		          <h2 class="flash_message_h2">"<%= @details.title %>"  <%=flash[:message] %></h2>
		          <button><%= link_to "View Your WishList", wishlist_show_path, class: "flash_message_button" %></button>
		         </div>
	        <% end %>
					<div class="check_page">
					  <h2> Detail For <span><%= @details.title %></span></h2>
					</div>
				<!-- Banner -->
					<section id="banner">
						<div class="content">
							
							<header>
								<h1><%= @details.title %></h1>
							</header> 
							
							<h2 class="detail_intription">What`s this?</h2>
							<p><%= @details.intro %></p>
							<h2 class="detail_intription">Overview</h2>
							<p class="details_p"><%= @details.description %></p>
							
	            <% total = 0 %>
              <% discount = 0 %>
              <div class="price">
                <div class="price_h3">
                 <h3 class="banner_price_before"><%= number_to_currency @details.price_before, unit: "$", seperator: "", delimiter: ""  %></h3>
                </div>
                <div class="price_p">
                  <p>Original Price</p>
                </div>
              </div>
              <div class="price">
                <div class="price_h3">
						     <h3 class="banner_price"><%= number_to_currency @details.price_after, unit: "$", seperator: "", delimiter: ""  %></h3>
						    </div>
						    <div class="price_p2">
						      <p>Current Price</p>
						    </div>
						 	</div>
						 	<% total += @details.price_before - @details.price_after %>
						 	<% discount += total.to_f / @details.price_before * 100  %>
  						<% if @details.price_before? %>
  							<h3 class="yousave"><%= number_to_currency total, unit: "$", seperator: "", delimiter: ""  %>(<%= discount.round(0) %>%) Savings</h3>
  					  <% end %>

							
							<ul class="actions">
								<li><a href="<%= @details.site_link %>" class="button big" target="_blank">Buy Now</a></li>
								<li><%= link_to '', add_wishlist_path(@details), class: "fa fa-cart-arrow-down cart-size", method: :post %></li>
								<li><h3><a href="/wishlists/show">Check WishList</a></h3></li>
							</ul></br></br></br>
						</div>
						<span class="image object">
							<img src="<%= @details.image_main %>" alt="" /></br>
							<div class="amazon-banner">
								<iframe src="//rcm-na.amazon-adsystem.com/e/cm?o=1&p=12&l=ur1&category=kindle&banner=1Y73E3KVWCWRGDBQ5ER2&f=ifr&linkID=d0f690bec12d182a3752ff2e983e490a&t=scarlet3628-20&tracking_id=scarlet3628-20" width="300" height="250" scrolling="no" border="0" marginwidth="0" style="border:none;" frameborder="0"></iframe>
					    </div>
						</span>
					</section></br>
					<div class="detail_border"></div></br>

	<!--Section -->
				 <div class="detail_body">
						<section>
							<header class="major">
								<h2>Photo & Video</h2>
							</header>
							
						<div class="video_container">
							<h1 class="related_text"> Related Videos</h1>
							<div class="video-wrapper_left">
								  <% if @details.youtube_link_01.present? %>
	                  <iframe src="<%= @details.youtube_link_01 %>" frameborder="0" allowfullscreen></iframe>
	                <% else %>                 
	                  <p>There is no any "Related Videos" :(</p>
	                <% end %>
							</div>
							<div class="video-wrapper_right">
								<iframe src="<%= @details.youtube_link_02 %>" frameborder="0" allowfullscreen></iframe>
							</div>
						</div><br/><br/>
							
							<h1 class="related_text"> Related Photos</h1>
							<div class="features">
								<article>
	                <img src="<%= @details.image_01 %>">
								</article>
								<article>
	                <img src="<%= @details.image_02 %>">
								</article>
								<article>
	                <img src="<%= @details.image_03 %>">
								</article>
								<article>
	                <img src="<%= @details.image_04 %>">
								</article>
							</div>
						</section>
						
						<h1 class="related_text"> Descriptions</h1>
						<ul>
							<li><%= @details.description_01 %></li>
							<li><%= @details.description_02 %></li>
							<li><%= @details.description_03 %></li>
							<li><%= @details.description_04 %></li>
							<li><%= @details.description_05 %></li>
						</ul>
						
						<div class="related_prodcut">
					  	<script type="text/javascript">
								amzn_assoc_placement = "adunit0";
								amzn_assoc_tracking_id = "scarlet3628-20";
								amzn_assoc_ad_mode = "search";
								amzn_assoc_ad_type = "smart";
								amzn_assoc_marketplace = "amazon";
								amzn_assoc_region = "US";
								amzn_assoc_default_search_phrase = " ";
								amzn_assoc_default_category = "All";
								amzn_assoc_linkid = "8e4056cd7c49b6d726c657f30e19d527";
								amzn_assoc_search_bar = "true";
								amzn_assoc_search_bar_position = "top";
								amzn_assoc_title = "Shop Related Products";
							</script>
							<script src="//z-na.amazon-adsystem.com/widgets/onejs?MarketPlace=US"></script>
						</div>
				  </div><!-- detail_body -->
		      
			</div>
		</div>
  <%= render 'shared/sidebar' %>	
</div><!-- id="wrapper" -->

<script src="//z-na.amazon-adsystem.com/widgets/onejs?MarketPlace=US&adInstanceId=4ae3b5c3-9d2e-40ae-988a-422eecdac6ed"></script>

