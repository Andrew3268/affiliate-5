<div id="wrapper">
	<div id="main">
		<div class="inner_quicksearch">
        <%= render 'shared/header' %><br>
        <button onclick="topFunction()" id="myBtn" title="Go to top">Top</button>
        <div class="quicksearch_warpper">

          <div class="quick_stiky_menu">
           <ul>
            <li><a href="#quickSearch">Quick Search</a></li>
            <li><a href="#promotion">Promotions</a></li>
            <li><a href="#discountCode">Discount Codes</a></li>
