 <div class="blog_right_side"> 

    <div class="recent_post_wrap">
     <h2>Recent Posts</h2>
     <% @recent_post.each do |post| %>
      <div class="recent_post">
        <div class="recent_post_img">
          <a href="<%= post.blog_link %>"><img src="<%= post.blog_main_img %>"></a>
        </div>
        <div class="recent_post_title">
          <a href="<%= post.blog_link %>"><p><%= post.blog_title %></p></a>
          <p class="recent_post_date"><i class="recent_icon"><img src="https://i.pinimg.com/564x/a6/e6/e8/a6e6e86d96fdbb7517993e0b7c43b1c4.jpg"><i> <%= post.blog_date %></p>
        </div>
      </div>
     <% end %>
    </div>

    <div class="blog_side_amazon">
      <a href="/search/quicksearch"><img src="<%=asset_path 'amazon_banner.png'%>"></a>
    </div><br>
 
    <div class="random_post_blog">
      <h2 class="gadget_title">Gadgets That Will Blow Your Mind</h2> 
        <% @ecommerces.each do |gadget| %>
         <a href="/ecommerces/detail/<%= gadget.id %>"><div class="blog_side_img"><img src="<%= gadget.image_main%>"></div></a>
        <% end %><br><br><br>
      <!-- <a href="/"><p class="see_more">See More Gadgets</p></a><br>       -->
    </div>

    <div class="twitter_bottom"></div>

    <div class="twitter-feed">
     <a class="twitter-timeline" data-height="1000" href="https://twitter.com/OhIgottabuythis?ref_src=twsrc%5Etfw">Tweets by OhIgottabuythis</a> <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
    </div>

    <div class="twitter_bottom"></div>
    
