<div id="wrapper">
  <div id="main">
    <div class="inner_hotdeals">
    <%= render 'shared/header' %>
      <button onclick="topFunction()" id="myBtn" title="Go to top">Top</button>

      <div class="flex main">
        <div class="flex-container">
          <a href="/shoes"><img src="<%=asset_path 'shoes.png'%>" class="flex-container-images" alt="Find Deals"></img></a>
        </div>
        <div class="flex-container">
          <a href="/bags"><img src="<%=asset_path 'bags.png'%>" class="flex-container-images" alt="Find Deals"></img></a>
        </div>
        <div class="flex-container">
          <a href="/clothes"><img src="<%=asset_path 'clothing.png'%>" class="flex-container-images" alt="Find Deals"></img></a>
        </div>
        <div class="flex-container">
          <a href="/accessories"><img src="<%=asset_path 'accessories.png'%>" class="flex-container-images" alt="Find Deals"></img></a>
        </div>
      </div></br></br>
      
      <div class="expanded row" data-equalizer data-equalize-on="medium" id="test-eq">
        <div class="large-18" data-equalizer-watch>
          <div class="grids">

            
            <% @bags.each do |bag| %>
              <div class="grid-item <%= bag.bag_option_01 %> <%= bag.bag_option_02 %> <%= bag.bag_option_03 %> <%= bag.bag_option_04 %> <%= bag.bag_option_05 %>">
                 <%= link_to (image_tag bag.bag_main_img), bag, {:class =>"main_img"} %>
                <div class="shop_sale">
                  <div class="shop_sale_wrapper">
                    <div class="shop_sale_howmuch"><%= bag.bag_sale %>% </div>
                    <div class="shop_sale_text">SALE</div>
                  </div>
                </div>
                <p class="shop_product_title"><%= link_to bag.bag_title, bag %></p>
                <div class="via_where">
                 <p class="shop_brand">via <%= bag.bag_option_03 %></p>
                </div>
                <ul class="shop_price_wrapper">
                  <li><p class="shop_original_price">$<%= bag.bag_offer_price %></p></li>
                  <li><p class="shop_sale_price">$<%= bag.bag_before_price %></p></li>
                </ul>
                <a target="_blank" href="<%= bag.bag_link %>"><p class="shop_check">Check it Out</p></a>
              </div>
            <% end %>
            <!--end grid-item-->
                            
          </div><!-- end grid-->
        </div><!--end col-->
      </div><!--end row-->
        
    </div><!--/.inner_hotdeals-->
  </div><!--/#main-->
  <%= render 'shared/sidebar_bags' %>  
</div><!--/#wrapper-->